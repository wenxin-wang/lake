#!/bin/bash

# Remove a package from system
. /usr/local/lib/liblake_common
check_commondirs

usage() {
    echo "usage: $(basename $0) [options] pkgfname"
    echo "-h: this help"
    echo "-d: dir only, no mkcmd"
}

while [ $# -gt 0 ]; do
    case "$1" in
        -h)
            usage
            exit
            ;;
        -d)
            dir_only=true
            ;;
        -*)
            echo "Unknown option $1"
            exit $E_WARGS
            ;;
        *)
            break
            ;;
    esac
    shift
done

if [ $# -ne 1 ]; then
    exit E_WARGS
fi

pkgfname=$1
cmdfile=$pkgfname
arch=${pkgfname##*-}
pkgver=${pkgfname%-$arch}
pkgver=${pkgver##*-}
pkgname=${pkgfname%-$pkgver-$arch}
verdir=$pkgs/$pkgname/$pkgver

if [ ! -d $verdir ]; then
    if [ -e $verdir ]; then
        exit $E_BADDIR
    else
        mkdir -p $verdir
    fi
fi

cd $verdir

if [ "_$dir_only" != "_true" -a ! -e $cmdfile ]; then
    mkcmd $cmdfile
fi

echo $verdir
